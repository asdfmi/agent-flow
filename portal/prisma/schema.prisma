generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow {
  id          Int           @id @default(autoincrement())
  slug        String        @unique
  title       String
  description String?
  startNodeId String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  nodes       WorkflowNode[]
  edges       WorkflowEdge[]
  runs        WorkflowRun[]
}

model WorkflowNode {
  id            Int           @id @default(autoincrement())
  workflow      Workflow      @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId    Int
  nodeKey       String
  type          WorkflowNodeType
  label         String?
  config        Json?
  successConfig Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([workflowId])
  @@unique([workflowId, nodeKey])
}

model WorkflowEdge {
  id         Int          @id @default(autoincrement())
  workflow   Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId Int
  edgeKey    String
  sourceKey  String
  targetKey  String?
  label      String?
  condition  Json?
  metadata   Json?
  /// Lower numbers are evaluated first when selecting the next node.
  priority   Int?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([workflowId])
  @@index([workflowId, sourceKey])
  @@unique([workflowId, edgeKey])
}

enum WorkflowNodeType {
  navigate
  wait
  scroll
  click
  fill
  press
  log
  script
  extract_text
}

model WorkflowRun {
  id           Int               @id @default(autoincrement())
  workflow     Workflow          @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId   Int
  runKey       String            @unique
  status       WorkflowRunStatus @default(queued)
  startedAt    DateTime          @default(now())
  finishedAt   DateTime?
  errorMessage String?
  stats        Json?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  metrics      WorkflowRunMetric[]

  @@index([workflowId])
  @@index([status, startedAt])
}

model WorkflowRunMetric {
  id        Int          @id @default(autoincrement())
  run       WorkflowRun  @relation(fields: [runId], references: [id], onDelete: Cascade)
  runId     Int
  key       String
  value     Json?
  createdAt DateTime     @default(now())

  @@index([runId, key])
}

enum WorkflowRunStatus {
  queued
  running
  succeeded
  failed
  cancelled
}
